<% provide(:title, "Home") %>

<section class="py-6 sm:py-6 dark:text-gray-800">
  <div class="container p-6 mx-auto space-y-8">
    <div class="space-y-2 text-center">
      <h2 class="text-3xl font-bold">Заклади</h2>
      <p class="font-serif text-sm dark:text-gray-400">Заклади міста Черкаси</p>
    </div>
    <div class="grid grid-cols-1 gap-x-4 gap-y-8 md:grid-cols-2 lg:grid-cols-4">
      <% @shops.each do |s| %>
        <%= link_to (s) do %>
          <article class="flex flex-col dark:bg-gray-100">
            <% if s.avatar.attached? %>
              <%= image_tag s.avatar, class: "object-cover w-full h-52 dark:bg-gray-100" %></p>
            <% end %>
            <div class="flex flex-col flex-1 p-2">
              <div class="flex flex-wrap justify-between pt-3 space-x-2 text-xs dark:text-gray-400">
                <div>
                  <p class="text-xs tracking-wider uppercase dark:text-violet-400"><%= s.name %></p>
                </div>
                <div>
                    <span class="text-green-500">Likes: <%= s.cached_votes_up %></span>
                    <span class="text-red-500">Dislikes: <%= s.cached_votes_down %></span>
                </div>
              </div>
              <div class="flex flex-wrap justify-between pt-3 space-x-2 text-xs dark:text-gray-400">
                <p><%= s.pts.map(&:pt).sort.join(", ") %></p>
                <p><%= s.working %></p>
              </div>
              <div class="flex flex-wrap justify-between pt-3 space-x-2 text-xs dark:text-gray-400">
                <span><%= s.address %></span>
                <span><%= s.contact %></span>
              </div>
            </div>
          </article>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="space-y-2 text-center">
    <%= link_to "Більше", shops_path, class: "px-4 py-1 font-semibold border rounded dark:border-gray-900 dark:text-gray-900 cursor-pointer hover:bg-violet-400" %>
  </div>
</section>
<section class="py-6 sm:py-6 dark:text-gray-800">
  <div class="container p-6 mx-auto space-y-8">
    <div class="space-y-2 text-center">
      <h2 class="text-3xl font-bold">Акції</h2>
      <p class="font-serif text-sm dark:text-gray-400">Акції закладів</p>
    </div>
    <div class="grid grid-cols-1 gap-x-4 gap-y-8 md:grid-cols-2 lg:grid-cols-4">
      <% @stocks.each do |s| %>
        <%= link_to (s) do %>
          <article class="flex flex-col dark:bg-gray-100">
            <% if s.avatar.attached? %>
              <%= image_tag s.avatar, class: "object-cover w-full h-52 dark:bg-gray-100" %></p>
            <% end %>
            <div class="flex flex-col flex-1 p-2">
              <div class="flex flex-wrap justify-between pt-3 space-x-2 text-xs dark:text-gray-400">
                <div>
                  <p class="text-xs tracking-wider uppercase dark:text-violet-400"><%= @cat = Shop.find(s.shop_ids) %></p>
                </div>
                <div>
                    <span><%= s.created_at.strftime("%B %d, %Y") %></span>
                </div>
              </div>
              <h3 class="flex-1 py-2 text-lg font-semibold leading-snug"><%= s.title %></h3>
            </div>
          </article>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="space-y-2 text-center">
    <%= link_to "Більше", shops_path, class: "px-4 py-1 font-semibold border rounded dark:border-gray-900 dark:text-gray-900 cursor-pointer hover:bg-violet-400" %>
  </div>
</section>
