<div id="<%= dom_id benefit %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Children:</strong>
    <%= benefit.children %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this benefit", benefit, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this benefit', edit_benefit_path(benefit), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
