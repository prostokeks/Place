<div id="<%= dom_id price %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= price.price %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this price", price, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this price', edit_price_path(price), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
